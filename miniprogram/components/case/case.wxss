/* components/case/case.wxss */

.case {
  padding: 0 20rpx 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 点击某些能点击的区域,有一个背景颜色的反馈hover-class */
.bg-color {
  background-color: #f5f5f5;
}

.case .case-item {
  display: flex;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}

.case .case-item .case-item-img {
  width: 150rpx;
  height: 100rpx;
}

.case .case-item .case-item-text {
  font-size: 26rpx;
  color: #666666;
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: flex-start;
  align-items: flex-start;
}

.case .case-item .case-item-text .case-item-text-title {
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.case .case-item .case-item-text .case-item-text-date {
  width: 100%;
  text-align: right;
}
