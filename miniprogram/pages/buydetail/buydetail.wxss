.imgstyle {
  width: 100%;
  margin-bottom: 80rpx;
}

.buydetail-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buydetail-bottom .price {
  flex: 1;
  height: 100%;
  line-height: 90rpx;
  text-align: right;
  background-color: rgba(255, 255, 255, 0.8)
}

.buydetail-bottom .price .total {
  margin-right: 30rpx;
  font-size: 36rpx;
  color: #DB4453;
  font-weight: bold;
}

.buydetail-bottom .btn {
  background-color: #0878f7;
  /* padding: 0 30rpx; */
  color: #ffffff;
}
