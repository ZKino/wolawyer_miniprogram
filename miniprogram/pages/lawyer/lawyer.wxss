/* pages/lawyer/lawyer.wxss */

.lawyer-list {
  width: 100%;
  /* margin-top: 82rpx; */
  box-sizing: border-box;
}

.lawyer-list .lawyer-item {
  padding: 10rpx 20rpx 20rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

/* 用户点击元素的触摸反馈 */
.bg-color {
  background-color: #f5f5f5;
}

.lawyer-list .lawyer-item .lawyer-item-img {
  width: 130rpx;
  height: 130rpx;
  box-sizing: border-box;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #f5f5f5;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.lawyer-list .lawyer-item .lawyer-item-text {
  padding-left: 160rpx;
  font-size: 26rpx;
  color: #666666;
  display: flex;
  flex-direction: column;
}

.lawyer-list .lawyer-item .lawyer-item-text .lawyer-item-name {line-height: 1.8;}

.lawyer-list .lawyer-item .lawyer-item-text .lawyer-item-job {
  line-height: 1.8;
  font-size: 24rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.lawyer-list .lawyer-item .lawyer-item-text .lawyer-item-address {
  line-height: 1.8;
  font-size: 24rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: -o-ellipsis-lastline;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
