/* pages/mine/mine.wxss */

.mine {}

.mine .mine-top {
  position: relative;
  margin-bottom: 108rpx;
}

.mine .mine-top .mine-top-bg {
  width: 100%;
  height: 150rpx;
  margin-top: -1rpx;
}

.mine .mine-top .mine-top-header {
  width: 100rpx;
  height: 100rpx;
  background-color: #ffffff;
  box-shadow: 5rpx 8rpx 12rpx #666666;
  border-radius: 50%;
  position: absolute;
  left: 80rpx;
  bottom: -40rpx;
  font-size: 30rpx;
  color: #999999;
}

.mine .mine-top .mine-top-card {
  position: absolute;
  left: 200rpx;
  bottom: -40rpx;
  font-size: 20rpx;
  color: #ffffff;
  padding: 2rpx 20rpx;
  background-color: #ED5564;
  border-radius: 16rpx;
}

.mine .mine-top .mine-top-login {
  width: 110rpx;
  position: absolute;
  left: 75rpx;
  bottom: -90rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.mine .mine-lists {
  border-top: 10rpx solid #f5f5f5;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
}

.mine .mine-lists view {
  display: block;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.mine .mine-lists view text {
  margin-left: 10rpx;
  color: #999999;
}

.mine .mine-lists view image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.bg-color {
  background-color: #f5f5f5;
}
