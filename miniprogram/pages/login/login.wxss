/* pages/login/login.wxss */

.login {}

.login .login-top {}

.login .login-top .login-top-bg {
  width: 100%;
  height: 150rpx;
  margin-top: -1rpx;
}

.login .login-form {
  padding: 100rpx;
  box-sizing: border-box;
}

.login .login-form .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
  padding: 30rpx 0;
}

.login .login-form .item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.login .login-form .item input {
  flex: 1;
  height: 50rpx;
  color: #999999;
  font-size: 28rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #999999;
}

.login .message-code {
  width: 180rpx;
  font-size: 24rpx;
  background-color: #1985ff;
  color: #ffffff;
}

.login .login-btn {
  margin-top: 100rpx;
  font-size: 30rpx;
  color: #ffffff;
  background-color: #1985ff;
}

.btn-hover {
  opacity: 0.8;
}
