/* pages/orderdetail/orderdetail.wxss */

.orderdetail {

}

.orderdetail .orderdetail-item {
  display: block;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 24rpx;
}

.orderdetail .orderdetail-item image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.orderdetail .orderdetail-item text {
  margin-left: 10rpx;
  color: #999999;

}

.orderdetail .caderdetail {
  display: flex
}

.orderdetail .caderdetail image {
  width: 180rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.orderdetail .caderdetail view {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #999999;
  font-size: 20rpx;
}
