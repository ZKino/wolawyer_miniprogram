/* pages/about/about.wxss */

.about {
  padding: 20rpx;
  color: #666666;
  font-size: 26rpx;
  text-align: justify;
  text-indent: 2em;
  line-height: 1.8;
}

.about-address {
  position: relative;
  padding: 20rpx;

}

.about-address image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.about-address text {
  font-size: 26rpx;
  color: #666666;
  display: block;
  margin-left: 70rpx;
}
